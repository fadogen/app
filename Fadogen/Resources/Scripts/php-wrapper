#!/bin/sh

# PHP Wrapper for .fadogen support in shebangs
# This wrapper is called by #!/usr/bin/env php in globally installed scripts

# Auto-detect FADOGEN_BASE from wrapper location (bin/php -> base)
FADOGEN_BASE="$(cd "$(dirname "$0")/.." && pwd)"

# Source the main Fadogen script which sets FADOGEN_BIN, FADOGEN_CONFIG, etc.
[ -f "$FADOGEN_BASE/scripts/fadogen.sh" ] && . "$FADOGEN_BASE/scripts/fadogen.sh"

_fadogen_exec_php_tool "$@"
