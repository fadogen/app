#!/bin/sh

# npx Wrapper for .fadogen and .nvmrc support
# This wrapper is called by #!/usr/bin/env npx in globally installed scripts

# Auto-detect FADOGEN_BASE from wrapper location (bin/npx -> base)
FADOGEN_BASE="$(cd "$(dirname "$0")/.." && pwd)"

# Source the main Fadogen script which sets FADOGEN_BIN, FADOGEN_NODE_VERSIONS, etc.
[ -f "$FADOGEN_BASE/scripts/fadogen.sh" ] && . "$FADOGEN_BASE/scripts/fadogen.sh"

_fadogen_exec_node_tool "npx" "$@"
